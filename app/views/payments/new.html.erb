<div class="container">
  <h1>CART</h1>
    <div class="row py-4">
      <div class="col-md-3"><%= cl_image_tag @order.product.photo.key, width: '50%' %></div>
      <div class="col">
        <p>Purchase of <strong><%= @order.product.title %></strong>
        <p><strong>Size : </strong><%= @order.product.size %></p>
        <p><strong>Price : </strong><%= humanized_money_with_symbol @order.amount %></p>
        <button id="pay" class='btn btn-flat'>Pay</button>
          <script src="https://js.stripe.com/v3/"></script>
          <script>
            const paymentButton = document.getElementById('pay');
            paymentButton.addEventListener('click', () => {
              const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
              stripe.redirectToCheckout({
                sessionId: '<%= @order.checkout_session_id %>'
              });
            });
          </script>
      </div>
    </div>
</div>
