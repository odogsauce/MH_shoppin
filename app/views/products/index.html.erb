
<div class="container">
  <div class="row">

    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="card-trip">
              <%= image_tag product.photo %>

            <div class="card-trip-infos">
              <div>
               <h2><%= product.title %></h2>
              </div>
              <h2 class="card-trip-pricing"><%= humanized_money_with_symbol(product.price) %></h2>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
