
<div class="banner" style="background-image: url(https://res.cloudinary.com/dwopswmlt/image/upload/v1607528254/sunbeach_sgwxqn.jpg);">
  <div class="container">
    <h1><%= image_tag "logo.png", class: "logo-mh" %> <strong>TO CREATIVE PEOPLE</strong></h1>
    <a><%= link_to 'SHOP NOW', root_path, class: "btn btn-warning" %></a>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="card-trip">
        <%= link_to product_path(product) do %>
          <%= cl_image_tag product.photo.key %>
            <div class="card-trip-infos">
              <div>
               <h2><%= product.title %></h2>
              </div>
                <h2 class="card-trip-pricing"><%= humanized_money_with_symbol(product.price) %></h2>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
