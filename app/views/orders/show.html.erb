<div class="container">
  <div class="row py-4">
    <div class="col-md-3"> <%= cl_image_tag @order.product.photo.key, width: '100%' %></div>
    <div class="col">
      <h1>Order #76543234-<%= @order.id %> <small><span class="badge badge-warning"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>PRODUCT</strong> <%= @order.product.title %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>5 business days</strong></p>
    </div>
  </div>
</div>
