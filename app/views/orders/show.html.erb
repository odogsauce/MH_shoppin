    <div class="col">
      <h1>Order #<%= @order.id %>12243643645 <small><span class="badge badge-warning"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><%= @order.created_at.to_date %></li>
        <li><%= @order.product.title %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
